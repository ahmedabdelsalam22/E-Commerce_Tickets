@using eTickets.Models.Dtos;
@model IEnumerable<CategoryDto>

<div class="row">
    <div class="col-md-8 offset-md-2">

        <div class="row pt-4 text-end">
            <div class="col-12 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-patch-plus"></i> &nbsp; Create New Category
                </a>
            </div>
        </div>


        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                       
                        <td class="align-middle">
                            @item.Name
                        </td>
                        
                        <td class="align-middle">
                            <a asp-action="Update" class="btn btn-primary" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        </td>
                        <td class="align-middle">
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

